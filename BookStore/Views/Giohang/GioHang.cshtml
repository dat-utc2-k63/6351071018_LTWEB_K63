@model List<BookStore.Models.Giohang>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<div style="width: 90%; margin: 0 auto;">
    <table align="center" border="1" style="width: 100%;">
        <tr style="text-align:center; font-weight:bold">
            <td>Mã sách</td>
            <td>Tên sách</td>
            <td>Ảnh bìa</td>
            <td>Số lượng</td>
            <td>Đơn giá</td>
            <td>Thành tiền</td>
            <td width="50px"></td>
            <td width="50px"></td>
            <td width="50px"></td>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="text-align:center; font-weight:bold">
                <td>@item.iMasach</td>
                <td>@item.sTensach</td>
                <td><img src="~/Content/images/@item.sAnhbia" alt="Ảnh bìa" style="width:100px;height:100px;" /></td>
                @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @iMaSp = item.iMasach }))
                {
                    <td><input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color: yellow" /></td>
                    <td>@item.iSoluong</td>
                    <td>@item.dDongia.ToString("N0") VND</td>
                    <td>@item.dThanhtien.ToString("N0") VND</td>
                    <td><a href="@Url.Action("Details", "BookStore", new { id = item.iMasach })">Chi tiết</a></td>
                    <td>@Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMasach })</td>
                    <td><input type="submit" value="Cập Nhật" /></td>
                }
            </tr>
        }

        <tr style="font-weight: bold; text-align:center; color:red">
            <td colspan="5">Số lượng sách: @ViewBag.Tongsoluong</td>
            <td colspan="5">Tổng tiền: @ViewBag.Tongtien.ToString("N0") VND</td>
        </tr>
        <tr style="text-align: center"><td colspan="10">@Html.ActionLink("Xóa giỏ hàng", "XoaTatcaGiohang")</td></tr>
        <tr style="text-align: center"><td colspan="10">@Html.ActionLink("ĐẶT HÀNG", "Dathang", "Giohang")</td></tr>
    </table>
    <br />
    
    </div>

