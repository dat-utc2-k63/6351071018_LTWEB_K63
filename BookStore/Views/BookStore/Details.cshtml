@model BookStore.Models.SACH
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="templatemo_content">

    <div id="templatemo_content_left">
        <div class="templatemo_content_left_section">
            <h1>Tên chủ đề</h1>
            @Html.Action("ChuDe", "BookStore")
        </div>
        <div class="templatemo_content_left_section">
            <h1>Bestsellers</h1>
            @Html.Action("Nhaxuatban", "BookStore")
        </div>

        <div class="templatemo_content_left_section">
            <a href="http://validator.w3.org/check?uri=referer"><img style="border:0;width:88px;height:31px" src="http://www.w3.org/Icons/valid-xhtml10" alt="Valid XHTML 1.0 Transitional" width="88" height="31" vspace="8" border="0" /></a>
            <a href="http://jigsaw.w3.org/css-validator/check/referer"><img style="border:0;width:88px;height:31px" src="http://jigsaw.w3.org/css-validator/images/vcss-blue" alt="Valid CSS!" vspace="8" border="0" /></a>
        </div>
    </div>

    <div id="templatemo_content_right">
        <h1>Book Title: <span>@Model.Tensach</span></h1>
        <div class="image_panel">
            <img src="~/Content/images/@Model.Anhbia" alt="@Model.Tensach" width="100" height="150" />
        </div>
        <h2>Read the lessons - Watch the videos - Do the exercises</h2>
        <ul>
            <li>By <a href="#">@Model.MaNXB</a></li> <!-- Giả sử bạn có thuộc tính TacGia trong mô hình -->
            <li>@Model.Giaban</li> <!-- Giả sử bạn có thuộc tính NamXuatBan -->
            <li>Pages: @Model.Ngaycapnhat</li> <!-- Giả sử bạn có thuộc tính SoTrang -->
        </ul>

        <p>@Model.Mota</p>
        <div class="buy_now_button"><a href="@Url.Action("ThemGioHang", "GioHang", new { @iMasach = @Model.Masach, strURL = Request.Url.ToString() })">Buy Now</a></div>

        <div class="cleaner_with_height">&nbsp;</div>

        <a href="#"><img src="~/Content/images/templatemo_ads.jpg" alt="css template ad" /></a> <!-- Chỉnh sửa liên kết -->

    </div> <!-- end of content right -->

    <div class="cleaner_with_height">&nbsp;</div>
</div> <!-- end of content -->
